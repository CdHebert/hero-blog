<article class="post">
  <div class="title">
    <h3>{{title}}</h3>
    <p name="blogs">{{post_url}}</p>
  </div>
  <div class="meta">
   <span> {{user.username}} on {{format_date created_at}}</span>
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>